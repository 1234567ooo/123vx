/* pages/photo/photo.wxss */

.container {
  background: linear-gradient(180deg, #fff5f8 0%, #f8f8f8 100%);
  min-height: 100vh;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background: white;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: white;
  font-weight: bold;
}

/* 照片网格 */
.photo-grid {
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.photo-item {
  width: calc(50% - 7.5rpx);
  aspect-ratio: 1;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.photo-image {
  width: 100%;
  height: 100%;
}

.photo-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(transparent 50%, rgba(0, 0, 0, 0.7));
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.photo-item:active .photo-overlay {
  opacity: 1;
}

.photo-info {
  align-self: flex-end;
}

.photo-date {
  font-size: 24rpx;
  color: white;
  display: block;
  margin-bottom: 5rpx;
}

.photo-category {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.photo-actions {
  align-self: flex-end;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.action-icon {
  font-size: 32rpx;
}

.action-icon.liked {
  animation: heartbeat 0.6s ease-in-out;
}

/* 添加照片按钮 */
.add-photo-btn {
  width: calc(50% - 7.5rpx);
  aspect-ratio: 1;
  border: 3rpx dashed #ddd;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  transition: all 0.3s ease;
}

.add-photo-btn:active {
  border-color: #ff6b9d;
  background-color: #fff5f8;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

.add-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  width: 100%;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #999;
  display: block;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #ccc;
  display: block;
}

/* 添加照片模态框 */
.add-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 90%;
  max-height: 90%;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 32rpx;
  color: white;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

/* 照片预览 */
.photo-preview {
  margin-bottom: 30rpx;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 15rpx;
}

/* 照片选择器 */
.photo-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.selector-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  padding: 40rpx 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.selector-btn:active {
  border-color: #ff6b9d;
  background-color: #fff5f8;
}

.selector-icon {
  font-size: 60rpx;
  color: #999;
}

.selector-text {
  font-size: 28rpx;
  color: #666;
}

/* 表单样式 */
.photo-form {
  margin-top: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 15rpx;
}

.input-field {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #ff6b9d;
  background-color: white;
}

/* 分类选择器 */
.category-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.category-option {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 25rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.category-option.selected {
  border-color: #ff6b9d;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.category-icon {
  font-size: 32rpx;
}

.category-name {
  font-size: 26rpx;
}

.category-option.selected .category-name {
  color: white;
}

/* 日期选择器 */
.date-picker {
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid transparent;
}

.date-picker:active {
  border-color: #ff6b9d;
  background-color: white;
}

.date-text {
  font-size: 32rpx;
  color: #333;
}

.picker-arrow {
  font-size: 32rpx;
  opacity: 0.6;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer button {
  flex: 1;
}

/* 照片详情模态框 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 9999;
}

.detail-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.detail-header {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
  padding: 40rpx 30rpx;
}

.detail-close {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.detail-close .close-icon {
  font-size: 40rpx;
  color: white;
}

/* 照片轮播 */
.photo-swiper {
  flex: 1;
  width: 100%;
}

.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.detail-image {
  max-width: 100%;
  max-height: 100%;
}

/* 照片详情信息 */
.photo-detail-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  color: white;
  padding: 60rpx 30rpx 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.photo-detail-info.show {
  transform: translateY(0);
}

.detail-info-content {
  margin-bottom: 30rpx;
}

.detail-description {
  font-size: 32rpx;
  line-height: 1.5;
  display: block;
  margin-bottom: 15rpx;
}

.detail-meta {
  display: flex;
  gap: 30rpx;
}

.detail-date {
  font-size: 26rpx;
  opacity: 0.8;
}

.detail-category {
  font-size: 26rpx;
  opacity: 0.8;
}

.detail-actions {
  display: flex;
  justify-content: space-around;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.action-item .action-icon {
  font-size: 40rpx;
}

.action-text {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .photo-item, .add-photo-btn {
    width: calc(50% - 10rpx);
  }
  
  .grid-container {
    gap: 10rpx;
  }
  
  .category-selector {
    gap: 10rpx;
  }
  
  .category-option {
    padding: 15rpx 20rpx;
  }
  
  .modal-content {
    width: 95%;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #2a1a1f 0%, #1a1a1a 100%);
  }
  
  .category-tabs {
    background-color: #2d2d2d;
  }
  
  .tab-text {
    color: #ccc;
  }
  
  .modal-content {
    background-color: #2d2d2d;
  }
  
  .modal-body {
    background-color: #2d2d2d;
  }
  
  .input-field, .date-picker {
    background-color: #444;
    color: #fff;
  }
  
  .input-label {
    color: #fff;
  }
  
  .date-text {
    color: #fff;
  }
  
  .category-option {
    border-color: #444;
    background-color: #333;
  }
  
  .category-name {
    color: #ccc;
  }
  
  .selector-btn {
    border-color: #444;
    background-color: #333;
  }
  
  .selector-text {
    color: #ccc;
  }
  
  .add-photo-btn {
    border-color: #444;
    background-color: #333;
  }
  
  .add-text {
    color: #ccc;
  }
}