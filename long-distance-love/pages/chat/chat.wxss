/* pages/chat/chat.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 聊天头部 */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.partner-info {
  display: flex;
  align-items: center;
}

.partner-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.partner-details {
  display: flex;
  flex-direction: column;
}

.partner-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.online-status {
  font-size: 24rpx;
  opacity: 0.8;
}

.chat-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.action-icon {
  font-size: 40rpx;
}

/* 消息列表 */
.chat-messages {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.message-list {
  padding-bottom: 20rpx;
}

.message-item {
  margin-bottom: 30rpx;
}

/* 时间分隔线 */
.time-divider {
  text-align: center;
  margin: 30rpx 0;
}

.time-text {
  background-color: rgba(0, 0, 0, 0.1);
  color: #999;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

/* 消息内容 */
.message-content {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.message-content.sent {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 15rpx;
}

/* 消息气泡 */
.message-bubble {
  max-width: 500rpx;
  padding: 20rpx 25rpx;
  border-radius: 25rpx;
  position: relative;
  word-wrap: break-word;
}

.message-bubble.sent {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
  border-bottom-right-radius: 8rpx;
}

.message-bubble.received {
  background-color: white;
  color: #333;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 消息类型样式 */
.message-text {
  font-size: 32rpx;
  line-height: 1.4;
}

.message-image {
  max-width: 400rpx;
  max-height: 400rpx;
  border-radius: 15rpx;
}

.voice-message {
  display: flex;
  align-items: center;
  gap: 15rpx;
  min-width: 150rpx;
}

.voice-icon {
  font-size: 32rpx;
}

.voice-duration {
  font-size: 28rpx;
}

.love-message {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.love-icon {
  font-size: 40rpx;
}

.love-text {
  font-size: 30rpx;
}

/* 消息状态 */
.message-status {
  text-align: right;
  margin-top: 5rpx;
}

.status-text {
  font-size: 22rpx;
  color: #999;
}

/* 输入区域 */
.input-area {
  background-color: white;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx;
}

.input-toolbar {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
  justify-content: center;
}

.toolbar-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.toolbar-btn:active {
  background-color: #e5e5e5;
  transform: scale(0.95);
}

.toolbar-icon {
  font-size: 40rpx;
}

/* 文本输入区域 */
.text-input-area {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.text-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
}

.text-input:focus {
  border-color: #ff6b9d;
  background-color: white;
}

.send-btn {
  background-color: #ddd;
  color: #999;
  border: none;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.send-btn:disabled {
  opacity: 0.5;
}

/* 语音输入区域 */
.voice-input-area {
  display: flex;
  justify-content: center;
}

.voice-btn {
  flex: 1;
  background-color: #f5f5f5;
  border: none;
  border-radius: 30rpx;
  padding: 25rpx;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
}

.voice-btn.recording {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
  transform: scale(0.98);
}

/* 录音模态框 */
.recording-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.recording-content {
  background-color: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  min-width: 400rpx;
}

.recording-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  animation: pulse 1s ease-in-out infinite;
}

.recording-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.recording-tip {
  font-size: 28rpx;
  color: #999;
  display: block;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .message-bubble {
    max-width: 400rpx;
  }
  
  .message-image {
    max-width: 300rpx;
    max-height: 300rpx;
  }
  
  .input-toolbar {
    gap: 20rpx;
  }
  
  .toolbar-btn {
    width: 70rpx;
    height: 70rpx;
  }
  
  .toolbar-icon {
    font-size: 35rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .chat-messages {
    background-color: #1a1a1a;
  }
  
  .message-bubble.received {
    background-color: #2d2d2d;
    color: #fff;
  }
  
  .input-area {
    background-color: #2d2d2d;
    border-top-color: #444;
  }
  
  .text-input {
    background-color: #444;
    color: #fff;
  }
  
  .toolbar-btn {
    background-color: #444;
  }
  
  .voice-btn {
    background-color: #444;
    color: #fff;
  }
}