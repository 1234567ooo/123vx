/* pages/diary/diary.wxss */

.container {
  background: linear-gradient(180deg, #fff5f8 0%, #f8f8f8 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 日记列表 */
.diary-list {
  padding: 20rpx;
  height: calc(100vh - 200rpx);
}

.diary-item {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
}

.diary-item:active {
  transform: scale(0.98);
}

/* 日记头部 */
.diary-header {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
}

.diary-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 25rpx;
  min-width: 80rpx;
}

.date-day {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  line-height: 1;
}

.date-month {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.diary-info {
  flex: 1;
  margin-right: 20rpx;
}

.diary-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
  line-height: 1.3;
}

.diary-preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 15rpx;
}

.diary-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.diary-author {
  font-size: 24rpx;
  color: #ff6b9d;
  font-weight: 500;
}

.diary-time {
  font-size: 24rpx;
  color: #999;
}

.diary-mood {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mood-icon {
  font-size: 60rpx;
}

/* 日记图片 */
.diary-images {
  display: flex;
  gap: 10rpx;
  padding: 0 30rpx 20rpx;
  overflow-x: auto;
}

.diary-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  flex-shrink: 0;
}

/* 互动区域 */
.diary-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-icon {
  font-size: 32rpx;
}

.action-icon.liked {
  animation: heartbeat 0.6s ease-in-out;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #999;
  display: block;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #ccc;
  display: block;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 157, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 50rpx;
  color: white;
}

/* 写日记模态框 */
.diary-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 90%;
  max-height: 90%;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 32rpx;
  color: white;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  max-height: 60vh;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 15rpx;
}

.input-field {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #ff6b9d;
  background-color: white;
}

.textarea-field {
  width: 100%;
  min-height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
  line-height: 1.5;
}

.textarea-field:focus {
  border-color: #ff6b9d;
  background-color: white;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
  display: block;
}

/* 心情选择器 */
.mood-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.mood-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  transition: all 0.3s ease;
}

.mood-item.selected {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  transform: scale(1.1);
}

.mood-emoji {
  font-size: 40rpx;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.uploaded-images {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.uploaded-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.delete-image {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #ff4757;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 24rpx;
  color: white;
}

.upload-btn {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ddd;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.upload-btn:active {
  border-color: #ff6b9d;
  background-color: #fff5f8;
}

.upload-icon {
  font-size: 40rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer button {
  flex: 1;
}

/* 日记详情模态框 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.detail-content {
  width: 95%;
  max-height: 95%;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.detail-header {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
}

.detail-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-body {
  flex: 1;
  padding: 30rpx;
  max-height: 70vh;
}

.detail-info {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.detail-meta {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.detail-author {
  font-size: 28rpx;
  color: #ff6b9d;
  font-weight: 500;
}

.detail-date {
  font-size: 28rpx;
  color: #999;
}

.detail-mood {
  font-size: 50rpx;
}

.detail-content-text {
  margin-bottom: 30rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

.detail-images {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 15rpx;
}

.detail-footer {
  border-top: 1rpx solid #f0f0f0;
  padding: 30rpx;
}

.detail-actions {
  display: flex;
  justify-content: space-around;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .diary-header {
    padding: 25rpx;
  }
  
  .diary-date {
    min-width: 70rpx;
  }
  
  .date-day {
    font-size: 40rpx;
  }
  
  .diary-title {
    font-size: 32rpx;
  }
  
  .diary-preview {
    font-size: 26rpx;
  }
  
  .modal-content {
    width: 95%;
  }
  
  .modal-body {
    padding: 25rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #2a1a1f 0%, #1a1a1a 100%);
  }
  
  .diary-item {
    background-color: #2d2d2d;
  }
  
  .diary-title {
    color: #fff;
  }
  
  .diary-preview {
    color: #ccc;
  }
  
  .diary-actions {
    background-color: #333;
    border-top-color: #444;
  }
  
  .modal-content {
    background-color: #2d2d2d;
  }
  
  .modal-body {
    background-color: #2d2d2d;
  }
  
  .input-field, .textarea-field {
    background-color: #444;
    color: #fff;
  }
  
  .input-label {
    color: #fff;
  }
  
  .detail-content {
    background-color: #2d2d2d;
  }
  
  .detail-title {
    color: #fff;
  }
  
  .content-text {
    color: #ccc;
  }
}