/* pages/countdown/countdown.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff5f8 0%, #f8f8f8 100%);
  position: relative;
  overflow: hidden;
  padding: 20rpx;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.heart-bg {
  position: absolute;
  font-size: 120rpx;
  opacity: 0.1;
  animation: float 6s ease-in-out infinite;
}

.heart1 {
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.heart2 {
  top: 30%;
  right: 15%;
  animation-delay: 2s;
}

.heart3 {
  bottom: 20%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(5deg); }
}

/* 主要倒计时区域 */
.countdown-main {
  position: relative;
  z-index: 1;
  margin-bottom: 40rpx;
}

.countdown-card {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
  text-align: center;
  padding: 60rpx 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(255, 107, 157, 0.3);
}

.countdown-header {
  margin-bottom: 40rpx;
}

.countdown-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.countdown-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 倒计时显示 */
.countdown-display {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin: 40rpx 0;
}

.time-unit {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  min-width: 120rpx;
}

.time-number {
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 10rpx;
}

.time-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.time-separator {
  font-size: 50rpx;
  font-weight: bold;
  opacity: 0.6;
}

/* 未设置日期状态 */
.no-date {
  text-align: center;
  padding: 60rpx 40rpx;
}

.no-date-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.no-date-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 40rpx;
  opacity: 0.9;
}

/* 已见面状态 */
.already-met {
  text-align: center;
  padding: 60rpx 40rpx;
}

.met-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  animation: bounce 2s ease-in-out infinite;
}

.met-text {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.met-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 40rpx;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10px); }
  60% { transform: translateY(-5px); }
}

/* 恋爱统计 */
.love-stats {
  position: relative;
  z-index: 1;
  margin-bottom: 40rpx;
}

.stats-card {
  background: white;
  padding: 40rpx 30rpx;
}

.stats-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

/* 快捷操作 */
.quick-actions {
  position: relative;
  z-index: 1;
  margin-bottom: 40rpx;
}

.action-row {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background: white;
  border: none;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.action-icon {
  font-size: 50rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 见面记录 */
.meet-records {
  position: relative;
  z-index: 1;
}

.records-header {
  margin-bottom: 20rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.records-list {
  max-height: 600rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: white;
}

.record-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 25rpx;
  min-width: 80rpx;
}

.record-day {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b9d;
  line-height: 1;
}

.record-month {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

.record-info {
  flex: 1;
  margin-right: 20rpx;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.record-location {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.record-duration {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.record-mood {
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-emoji {
  font-size: 50rpx;
}

/* 模态框样式 */
.date-modal, .record-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 32rpx;
  color: white;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 15rpx;
}

.input-field {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #ff6b9d;
  background-color: white;
}

/* 选择器样式 */
.date-picker, .time-picker {
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid transparent;
}

.date-picker:active, .time-picker:active {
  border-color: #ff6b9d;
  background-color: white;
}

.date-text, .time-text {
  font-size: 32rpx;
  color: #333;
}

.picker-arrow {
  font-size: 32rpx;
  opacity: 0.6;
}

/* 心情选择器 */
.mood-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.mood-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  transition: all 0.3s ease;
}

.mood-item.selected {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  transform: scale(1.1);
}

.mood-emoji {
  font-size: 40rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer button {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .countdown-display {
    gap: 10rpx;
  }
  
  .time-unit {
    min-width: 100rpx;
    padding: 25rpx 15rpx;
  }
  
  .time-number {
    font-size: 50rpx;
  }
  
  .time-separator {
    font-size: 40rpx;
  }
  
  .action-row {
    gap: 15rpx;
  }
  
  .action-btn {
    padding: 25rpx 15rpx;
  }
  
  .action-icon {
    font-size: 40rpx;
  }
  
  .modal-content {
    width: 95%;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #2a1a1f 0%, #1a1a1a 100%);
  }
  
  .stats-card, .action-btn, .record-item {
    background-color: #2d2d2d;
  }
  
  .stats-title, .records-title {
    color: #fff;
  }
  
  .stat-label {
    color: #ccc;
  }
  
  .action-text {
    color: #fff;
  }
  
  .record-title {
    color: #fff;
  }
  
  .record-location {
    color: #ccc;
  }
  
  .record-duration {
    color: #999;
  }
  
  .modal-content {
    background-color: #2d2d2d;
  }
  
  .modal-body {
    background-color: #2d2d2d;
  }
  
  .input-field, .date-picker, .time-picker {
    background-color: #444;
    color: #fff;
  }
  
  .input-label {
    color: #fff;
  }
  
  .date-text, .time-text {
    color: #fff;
  }
}