/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #fff5f8 0%, #f8f8f8 100%);
  min-height: 100vh;
}

/* 问候区域 */
.greeting-section {
  margin-bottom: 30rpx;
}

.greeting-card {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
  text-align: center;
  padding: 40rpx 30rpx;
}

.heart-container {
  margin: 0 30rpx;
}

.heart-icon {
  font-size: 60rpx;
}

.greeting-text {
  margin-top: 20rpx;
}

.greeting-text .text-large {
  color: white;
  font-size: 32rpx;
  font-weight: normal;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 快捷功能区域 */
.quick-actions {
  margin-bottom: 30rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 157, 0.2);
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 今日情话区域 */
.love-quote-section {
  margin-bottom: 30rpx;
}

.love-quote-card {
  background: linear-gradient(135deg, #ffeef3, #fff);
  border-left: 6rpx solid #ff6b9d;
}

.quote-header {
  margin-bottom: 20rpx;
}

.quote-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b9d;
}

.quote-content {
  padding: 20rpx;
  background: rgba(255, 107, 157, 0.05);
  border-radius: 15rpx;
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  font-style: italic;
}

/* 设置区域 */
.settings-section {
  text-align: center;
  margin-top: 40rpx;
}

/* 爱心飘落动画 */
.hearts-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 9999;
}

.floating-heart {
  position: absolute;
  top: -50rpx;
  font-size: 60rpx;
  animation: floatDown 3s linear forwards;
}

@keyframes floatDown {
  0% {
    transform: translateY(-50rpx) rotate(0deg);
    opacity: 1;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .action-grid {
    gap: 15rpx;
  }
  
  .action-item {
    padding: 25rpx 15rpx;
  }
  
  .action-icon {
    font-size: 50rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #2a1a1f 0%, #1a1a1a 100%);
  }
  
  .card {
    background-color: #2d2d2d;
  }
  
  .action-text {
    color: #fff;
  }
  
  .quote-text {
    color: #ccc;
  }
}