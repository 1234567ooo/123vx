/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

/* 主色调 */
.primary-color {
  color: #ff6b9d;
}

.primary-bg {
  background-color: #ff6b9d;
}

.secondary-color {
  color: #c44569;
}

.secondary-bg {
  background-color: #c44569;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
  padding: 30rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-secondary {
  background-color: transparent;
  color: #ff6b9d;
  border: 2rpx solid #ff6b9d;
  border-radius: 50rpx;
  padding: 18rpx 38rpx;
  font-size: 32rpx;
}

/* 输入框样式 */
.input-group {
  margin: 20rpx 0;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-field {
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
}

.input-field:focus {
  border-color: #ff6b9d;
  background-color: #fff;
}

/* 头像样式 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #ff6b9d;
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-large {
  font-size: 36rpx;
  font-weight: bold;
}

.text-medium {
  font-size: 32rpx;
}

.text-small {
  font-size: 28rpx;
  color: #999;
}

/* 布局样式 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.margin-top {
  margin-top: 20rpx;
}

.margin-bottom {
  margin-bottom: 20rpx;
}

/* 爱心动画 */
@keyframes heartbeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.heart-animation {
  animation: heartbeat 1.5s ease-in-out infinite;
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
}

.gradient-text {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}